    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Production",
            "request": "launch",
            "envFile": "${workspaceFolder}/.env",
            "env": {
                "NODE_ENV": "production"
            },
            "runtimeArgs": [
                "run-script",
                "start",
            ],
            "runtimeExecutable": "npm",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node"
        },
        {
            "name": "Launch Development",
            "request": "launch",
            "env": {
                "NODE_ENV": "development"
            },
            "runtimeArgs": [
                "run-script",
                "start:dev"
            ],
            "runtimeExecutable": "npm",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node"
        },
    ]
}